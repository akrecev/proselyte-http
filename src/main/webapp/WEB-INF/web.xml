<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>HTTP Study project</display-name>

    <servlet>
        <servlet-name>FileRestControllerV1</servlet-name>
        <servlet-class>com.kretsev.controller.FileRestControllerV1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileRestControllerV2</servlet-name>
        <servlet-class>com.kretsev.controller.FileRestControllerV2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRestControllerV1</servlet-name>
        <servlet-class>com.kretsev.controller.UserRestControllerV1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventRestControllerV1</servlet-name>
        <servlet-class>com.kretsev.controller.EventRestControllerV1</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileRestControllerV1</servlet-name>
        <url-pattern>/api/v1/files</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileRestControllerV2</servlet-name>
        <url-pattern>/api/v2/files</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRestControllerV1</servlet-name>
        <url-pattern>/api/v1/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventRestControllerV1</servlet-name>
        <url-pattern>/api/v1/events</url-pattern>
    </servlet-mapping>

</web-app>
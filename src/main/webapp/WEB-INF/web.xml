<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>HTTP Study project</display-name>

    <servlet>
        <servlet-name>StudyServlet</servlet-name>
        <servlet-class>com.kretsev.servlet.study.StudyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusCodeDemo</servlet-name>
        <servlet-class>com.kretsev.servlet.study.StatusCodeDemo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRequestDemo</servlet-name>
        <servlet-class>com.kretsev.servlet.study.ServletRequestDemo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudyServlet</servlet-name>
        <url-pattern>/StudyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusCodeDemo</servlet-name>
        <url-pattern>/StatusCodeDemo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRequestDemo</servlet-name>
        <url-pattern>/ServletRequestDemo</url-pattern>
    </servlet-mapping>
    
</web-app>